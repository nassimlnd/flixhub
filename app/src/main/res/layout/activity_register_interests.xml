<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/lexend"
        android:text="@string/register_interests_subtitle"
        android:textColor="@color/white" />


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/interest_fragment_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:paddingVertical="12dp"
            app:flexWrap="wrap"
            app:alignItems="stretch"
            app:alignContent="stretch" />
    </ScrollView>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="16dp"
        android:paddingHorizontal="24dp"
        app:justifyContent="center">
        <Button
            android:id="@+id/registerInterestsSkipButton"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="8dp"
            app:layout_flexGrow="1"
            android:theme="@style/Button.Secondary"
            android:fontFamily="@font/lexend"
            android:text="@string/register_interests_skip"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/registerInterestsSubmitButton"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            app:layout_flexGrow="1"
            android:layout_gravity="center"
            android:layout_marginHorizontal="8dp"
            android:fontFamily="@font/lexend"
            android:text="@string/register_interests_submit"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </com.google.android.flexbox.FlexboxLayout>



</LinearLayout>